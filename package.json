{
  "name": "videojs-contrib-ads",
  "description": "A framework that provides common functionality needed by video advertisement libraries working with video.js.",
  "main": "dist/videojs.ads.js",
  "module": "dist/videojs-contrib-ads.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/videojs/videojs-contrib-ads.git"
  },
  "version": "6.4.1",
  "author": "Brightcove, Inc.",
  "engines": {
    "node": ">=4.8.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:*",
    "build:css": "npm-run-all build:css:sass build:css:copy",
    "build:css:sass": "node-sass src/plugin.scss dist/videojs-ssai.css --output-style=compressed --linefeed=lf",
    "build:css:postcss": "postcss --verbose -o dist/videojs-contrib-ads.css --config scripts/postcss.config.js src/plugin.css",
    "build:css:copy": "cpy dist/videojs-contrib-ads.css dist/ --rename=videojs.ads.css",
    "build:js": "npm-run-all build:js:rollup build:js:copy build:js:copymin",
    "build:js:rollup": "rollup -c scripts/rollup.config.js",
    "build:js:copy": "cpy dist/videojs-contrib-ads.js dist/ --rename=videojs.ads.js",
    "build:js:copymin": "cpy dist/videojs-contrib-ads.min.js dist/ --rename=videojs.ads.min.js",
    "clean": "rimraf dist test/dist",
    "postclean": "mkdirp dist test/dist",
    "lint": "eslint src",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch --no-browsers",
    "start": "npm-run-all -p server watch",
    "pretest": "npm-run-all lint build",
    "test": "karma start scripts/karma.conf.js",
    "preversion": "npm test",
    "version": "node scripts/version.js",
    "watch": "npm-run-all -p watch:*",
    "watch:css": "npm run build:css:sass -- -w",
    "watch:js": "npm run build:js:rollup -- -w",
    "prepublish": "not-in-install && npm run build || in-install",
    "prepush": "npm run lint"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "conventional-changelog-cli": "^2.0.0",
    "conventional-changelog-videojs": "^3.0.0",
    "cpy-cli": "^1.0.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.11.0",
    "eslint-config-videojs": "^2.1.0",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-detect-browsers": "^2.2.6",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-qunit": "^2.0.0",
    "karma-safari-launcher": "^1.0.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.2",
    "postcss-banner": "^3.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-preset-env": "^5.1.0",
    "qunit": "^2.5.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "semver": "^5.1.0",
    "serve-static": "^1.13.2",
    "sinon": "^2.2.0",
    "uglify-es": "^3.3.9",
    "videojs-standard": "^6.0.0"
  },
  "keywords": [
    "videojs",
    "videojs-plugin"
  ],
  "license": "Apache-2.0",
  "eslintConfig": {
    "extends": "videojs",
    "rules": {
      "require-jsdoc": "off",
      "consistent-this": "off"
    }
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "dependencies": {
    "global": "^4.3.2",
    "video.js": "^6 || ^7"
  },
  "generator-videojs-plugin": {
    "version": "6.0.9"
  },
  "greenkeeper": {
    "ignore": [
      "sinon",
      "rollup",
      "rollup-plugin-commonjs"
    ]
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist"
    ]
  }
}
